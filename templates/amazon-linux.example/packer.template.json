
{
  "_comment"   : "This is a comment",
  "description": "This is a description",

  "variables": {
    "aws_access_key": "{{ env `AWS_ACCESS_KEY_ID`     }}",
    "aws_secret_key": "{{ env `AWS_SECRET_ACCESS_KEY` }}",
    "aws_profile"   : "{{ env `AWS_DEFAULT_PROFILE`   }}",
    "ami_name"      : "",
    "ami_date"      : ""
  },

  "builders": [
    {
      "type": "amazon-ebs",

      "profile"   : "{{ user `aws_default`    }}",

      "region"       : "us-west-2",
      "instance_type": "t2.micro",
      "ami_name"     : "{{ user `ami_name` }}-{{ timestamp }}",
      "ami_description" : "Source: {{ .BuildRegion }}/{{ .SourceAMI }}",

      "source_ami_filter": {
        "filters": {
          "name": "amzn-ami-minimal-*",
          "virtualization-type": "hvm",
          "root-device-type"   : "ebs"
        },
        "most_recent": true
      },
      "ssh_username" : "ec2-user",
      "ssh_keypair_name" : "marcus_anirul_id_rsa",
      "ssh_agent_auth" : "true",
      "user_data": "#!/bin/bash\n\nyum install -y openssh-clients\n\n",

      "run_tags": {
        "Name"      : "{{ user `ami_name` }}-{{ user `ami_date` }}",
        "Source"    : "{{ .BuildRegion }}/{{ .SourceAMI }}",
        "OS_Version": "AmazonLinux"
      },
      "tags": {
        "Name"      : "{{ user `ami_name` }}-{{ user `ami_date` }}",
        "Source"    : "{{ .BuildRegion }}/{{ .SourceAMI }}",
        "OS_Version": "AmazonLinux",
        "Release"   : "Latest"
      }

    }

  ],

  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo yum update -y",
        "sudo yum install -y htop"
      ]
    }
  ]

}

